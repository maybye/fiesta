#include <iostream>
#include <array>
using namespace std;

int size;

class stack
{
    private:
        int *array;
        int top;
    public:
        stack()
        {
            top = -1;
            array = new int[size];
        }
        stack(int m)
        {
            top = -1;
            array = new int[m];
        }
        ~ stack()
        {
            delete[] array;
        }
        
        void push(int a)
        {
            if (top == size -1 ){
                cout << "Стэк заполнен." << endl;
                top ++;
                array [top] = a;
            }
            else {
                top ++;
                array [top] = a;
            }
        }
        
        void pop()
        {
            if (top >= 0){
                cout << array[top] << endl;
                array[top] = 0;
                top --;
            }
            else 
                cout << "Стэк пуст." << endl;
        }
        
        void print ()
        {
            if (top >= 0)
	            for (int i = 0; i <= size; i++)
	            {
	                cout << "array[" << i << "] = " << array[i] << "; " << endl;
	            }
        }
};

    int main() {
        int n;
        bool t;
        int Continue;
        int read;
        
        cout << "Введите размер стэка: ";
        cin >> size;
        size--;
        
        stack one(size);
        do {
            cout << "Для добавления нажмите - 1, для извлечения - 0: ";
            cin >> t;
            
                if (t) {
                    cout << "Введите значение элемента: ";
                    cin >> n;
                    one.push (n);
                }
    
                else {
                    cout << "Элемент равен: ";
                    one.pop();
                    cout << endl;
                }
            cout << "Продолжить? (1/0): " << endl;
            cin >> Continue;
            }
        while ( Continue != 0 );
        
        cout << "Прочесть оставшийся массив? (1/0): ";
        cin >> read;
        if (read == 1)
            one.print();
        return 0;
    }
