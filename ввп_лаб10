#include <iostream>
#include <math.h>
#include <algorithm>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");

	//задание 1
	int A, B;
	cout << "Введите числа А и В, чтобы проверить истинность высказывания: " << endl;
	cin >> A >> B;
	if (A > 2 && B <= 3)
	{
		cout << "Высказывание истинно" << endl;
	}
	else
	{
		cout << "Высказывание ложно" << endl;

	}

	//задание 2
	int A1, B1, C1;
	cout << " " << endl;
	cout << "Введите значения А, В, С, чтобы проверить истинность высказывания: " << endl;
	cin >> A1 >> B1 >> C1;
	if (A1 < B1 && B1 < C1)
	{
		cout << "Высказывание истинно" << endl;
	}
	else {
		cout << "Высказывание ложно" << endl;
	}

	//задание 3
	cout << " " << endl;
	int Q, K;
	cout << "Введите двузначное число Q, чтобы проверить истинность высказывания: " << endl;
	cin >> Q;
	K = Q / 10;
	if ((K > 0 && K < 10 && Q % 2 == 0))
	{
		cout << "Высказывание истинно" << endl;
	}
	else {
		cout << "Высказывание ложно" << endl;
	}

	//задание 4
	cout << " " << endl;
	int x;
	cout << "Введите трехзначное число Х, чтобы проверить истинность высказывания: " << endl;
	cin >> x;
	if ((x % 10 < (x % 100 / 10) && (x % 100 / 10 < x / 100)) || (x / 100 < (x % 100 / 10) && (x % 100 / 10) < x % 10))
	{
		cout << "Высказывание истинно" << endl;
	}
	else {
		cout << "Высказывание ложно" << endl;
	}

	//задание 5
	cout << " " << endl;
	int s, t;
	cout << "Введите четырехзначное число S, чтобы проверить истинность высказывания: " << endl;
	cin >> s;
	t = s % 100 / 10 + s % 10 * 10;
	if (s / 100 == t)
	{
		cout << "Высказывание истинно" << endl;
	}
	else {
		cout << "Высказывание ложно" << endl;
	}

	//задание 6
	cout << " " << endl;
	int a, b, c, v;
	cout << "Введите стороны прямоугольника а, b, c: " << endl;
	cin >> a >> b >> c;
	v = max(a, b);
	v = max(v, c);
	a = min(a, b);
	b = min(c, b);
	if (v* v == a * a + b * b)
	{
		cout << "Высказывание истинно" << endl;
	}
	else {
		cout << "Высказывание ложно" << endl;
	}

	//задание 7
	cout << " " << endl;
	int a1, b1, c1;
	cout << "Введите стороны прямоугольника а, b, c: " << endl;
	cin >> a1 >> b1 >> c1;
	if (a1< b1 + c1 && b1 < a1 + c1 && c1 < a1 + b1)
	{
		cout << "Данный треугольник существует" << endl;
	}
	else {
		cout << "Данный треугольник не существует" << endl;
	}
}
