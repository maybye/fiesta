#include <iostream>
using namespace std; 

int main()
{
	setlocale(LC_ALL, "Rus");

	//задание 1
	int N;
	cout << "Введите количество секунд, прошедших с начало суток: ";
	cin >> N;
	while (N - 60 >= 0)
	{
		N -= 60;
	}
	cout << "Количество секунд, прошедшее с конца последней минуты: " << N << endl; ;

	//задание 2
	cout << " " << endl;
	int K;
	cout << "Введите число К: ";
	cin >> K;
	while (K - 7 >= 0)
	{
		K -= 7;
	}
	cout << "Номер дня недели К-того дня: " << K << endl;

	//задание 3

	cout << " " << endl;
	int K1, N1;
	cout << "Введите день года К и день, с которого начался данный год N: " << endl;
	cout << "K" << " " << "N" << endl;
	cin >> K1 >> N1;
	while (K1 - 7 >= 0)
	{
		K1 -= 7;
	}
	cout << "Номер дня недели К-того дня: " << K1 + (N1 - 1) << endl;

	//задание 4
	cout << " " << endl;
	int A, B, C, Q, S;
	cout << "Введите длины сторон прямоугольника A и В: " << endl;
	cout << "A" << " " << "B" << endl;
	cin >> A >> B;
	cout << "Введите длину стороны квадрата С: " << endl;
	cout << "C" << endl;
	cin >> C;
	Q = (A / C) * (B / C);	
	S = A * B - C * C * Q;
	cout << "Количество квадратов равно: " << Q << endl;
	cout << "Площадь незанятой части прямоугольника: " << S << endl;

	//задание 5
	cout << " " << endl;
	int Y;
	cout << "Введите год, чтобы узнать столетие: ";
	cin >> Y;
	cout << "Номер столетия: " << (Y - 1) / 100 + 1 << endl;

}
