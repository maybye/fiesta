#include <iostream>
#include <array>
using namespace std;


class stack
{
    private:
    	  int size;
        int *array;
        int top;
    public:
        stack(int m)
        {
	    size = m;
            top = -1;
            array = new int[m];
        }
        ~ stack()
        {
            delete[] array;
        }
        
        void push(int a)
        {
            if (top < size) 
            { 
                    for (int i = size; i > 0; i--) 
                    { 
                    array[i] = array[i - 1]; 
                    } 
                top ++; 
                array[0] = a; 
                }        
            else cout << "Невозможно добавить последний элемент: стэк полон" << endl;
            }
        
        
        void pop() 
        { 
            if (top >= 0) 
            {
                cout << "Элемент равен: " << array[0] << endl;
                array[0] = 0;
                for (size_t i = 0; i < size; i++) 
                  { 
                    array[i] = array[i + 1]; 
                  } 
                top --; 
            } 
            else cout << "Стэк пуст" << endl; 
        }
};

    int main() {
    	  int size;
        int n;
        bool t;
        int Continue;
        
        cout << "Введите размер стэка: ";
        cin >> size;
        -- size;
        
        
        stack one(size);
        do {
            cout << "Для добавления нажмите - 1, для извлечения - 0: ";
            cin >> t;
            
                if (t) {
                    cout << "Введите значение элемента: ";
                    cin >> n;
                    one.push (n);
                }
    
                else {
                    one.pop();
                }

            cout << "Продолжить? (1/0): ";
            cin >> Continue;
            cout << endl;
            }
        while ( Continue != 0 );
        
        return 0;
    }
