#include <iostream>
using namespace std;

class queue {
    private:
        int size;
        int *array;
        int top,end;
        
    public:
        queue (int m)
        {
          size = m;
          top = -1;
          array = new int[m];
        }
        
        ~queue()
        {
            delete[] array;
        }

    void Add (int a)
    {
        if (top < size - 1) 
            { 
                for (int i = size -1; i > 0; i--) 
                { 
                    array[i] = array[i - 1]; 
                } 
            
            array[0] = a;
            top ++; 
            } 
    }
    
    int Extract () {
        int m;
        if (top >= 0) 
            {   
                m = array[top];
                array [top] = 0;
                for (int i = size-1; i < 0; i--) 
                { 
                    array[i] = array [i-1]; 
                }    
                top --; 
                
            }
        return m;
    }
    
    bool Full() {
            if (top == size -1) return true;
            else return false;
        }
        
        bool Empty() {
            if (top == -1) return true;
            else return false;
        }
    
};

int main() {
    
    int size, value;
    int IsFull, IsEmpty;
    int Continue;
    bool t;
    
    cout << "Введите количество элементов в очереди: ";
    cin >> size;
    
    queue one(size);
    do {
        cout << "Для добавления нажмите - 1, для извлечения - 0: ";
        cin >> t;
        if (t){
            IsFull = one.Full();
            if (IsFull == 0) {
                cout << "Введите значение: ";
                cin >> value;
                one.Add(value);
               
            }
            else cout << "Очередь заполнена." << endl;
            }
            
        else {
            IsEmpty = one.Empty();
            if (IsEmpty == 0) {
                value = one.Extract();
                cout << "Элемент равен: " << value << endl;
            }
            else cout << "Очередь пуста." << endl;
        }
        
        cout << "Продолжить? (1/0): ";
            cin >> Continue;
            cout << endl;
        }
        while ( Continue != 0 );
        
        return 0;
}


