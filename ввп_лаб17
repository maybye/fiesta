#include <iostream>
#include <math.h>
#include <algorithm>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");

	//задание 1
	cout << "--- Задание 1 ---" << endl;
	cout << endl;
	cout << "Дан массив размера N и целые числа K и L (1 ≤ K ≤ L ≤ N)." << endl;
	cout << "Найти среднее арифметическое элементов массива с номерами от K до L включительно." << endl;
	cout << "Введите размер массива N: ";
	int K, L, n;
	float sum = 0;
	float count;
	int arr[100];
	cin >> n;
	cout << "Введите массив: " << endl;
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	cout << "Введите числа К и L: ";
	cin >> K >> L;
	int p = L - K + 1;
	while (K <= L) {
		sum+= arr[K];
		K++;
	}
	count = sum / p;
	cout << count << endl;
	cout << endl;

	//задание 2
	cout << "--- Задание 2 ---" << endl;
	cout << endl;
	cout << "Дан целочисленный массив размера N, не содержащий одинаковых чисел." << endl;
	cout << "Проверить, образуют ли его элементы арифметическую прогрессию. " << endl;
	cout << "Если образуют, то вывести разность прогрессии, если нет — вывести 0." << endl;
	cout << "Введите размер массива N: ";
	int n1, d, d1;
	int ar[100];
	cin >> n1;
	cout << "Введите массив: " << endl;
	int i;
	for (i = 0; i < n1; i++) {
		cin >> ar[i];
	}
	d1 = ar[1] - ar[0];
	for (i = 1; i < n1; i++) {
		if (d1 != ar[i] - ar[i-1]) {
			d1 = 0;
		}
		}
	cout << d1; 
	cout << endl;

	//задание 3
	cout << "--- Задание 3 ---" << endl;
