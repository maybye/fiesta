#include <iostream>
#include <math.h>
#include <algorithm>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");
	
	//задание 1
	cout << "--- Задание 1 ---" << endl;
	cout << endl;
	cout << "Дан массив размера N и целые числа K и L (1 <= K <= L <= N)." << endl;
	cout << "Найти среднее арифметическое элементов массива с номерами от K до L включительно." << endl;
	cout << "Введите размер массива N: ";
	int K, L, n;
	float sum = 0;
	float count;
	int arr[100];
	cin >> n;
	cout << "Введите массив: " << endl;
	for (int i = 0; i < n; i++) {
		cin >> arr[i];
	}
	cout << "Введите числа К и L: ";
	cin >> K >> L;
	int p = L - K + 1;
	while (K <= L) {
		sum += arr[K];
		K++;
	}
	count = sum / p;
	cout << count << endl;
	cout << endl;

	//задание 2
	cout << "--- Задание 2 ---" << endl;
	cout << endl;
	cout << "Дан целочисленный массив размера N, не содержащий одинаковых чисел." << endl;
	cout << "Проверить, образуют ли его элементы арифметическую прогрессию. " << endl;
	cout << "Если образуют, то вывести разность прогрессии, если нет — вывести 0." << endl;
	cout << "Введите размер массива N: ";
	int n1, d1;
	int ar[100];
	cin >> n1;
	cout << "Введите массив: " << endl;
	int i;
	for (i = 0; i < n1; i++) {
		cin >> ar[i];
	}
	d1 = ar[1] - ar[0];
	for (i = 1; i < n1; i++) {
		if (d1 != ar[i] - ar[i - 1]) {
			d1 = 0;
		}
	}
	cout << d1;
	cout << endl;

	//задание 3
	cout << "--- Задание 3 ---" << endl;
	cout << "Дан массив A размера N. Найти минимальный элемент из его элементов с четными номерами: A2, A4, A6..." << endl;
	cout << "Введите размер массива: " << endl;
	int n2, m;
	cin >> n2;
	cout << "Введите массив: " << endl;
	int f[100];
	for (i = 0; i < n2; i++) {
		cin >> f[i];
	}
	for (i = 2; i < n2; i += 2) {
		m = min(f[i], f[i + 1]);
		
	}
	cout << "Минимальный элемент: " <<  m << endl; 

	//задание 4
	cout << endl;
	cout << "--- Задание 4 ---" << endl;
	cout << "Дан массив размера N. Найти номер его последнего локального максимума." << endl;
	cout << "Введите размер массива: " << endl;
	int n3;
	int b[100];
	cin >> n3;
	cout << "Введите массив: " << endl;
	for ( i = 0; i < n3; i++) {
		cin >> b[i];
	}
	for (int i = 0; i < n3; i++) {
		if (b[i] > b[i + 1]) {
			if (b[i] > b[i - 1]) {
				cout << "Локальный максимум: " << b[i] << endl;
			}
		}
	}

	//задание 5
	cout << endl;
	cout << "--- Задание 5 ---" << endl;
	cout << "Дан целочисленный массив размера N." << endl;
	cout << "Найти номера двух одинаковых элементов и вывести эти номера в порядке возрастания." << endl;
	cout << "Введите размер массива: " << endl;
	int n4, q[100];
	cin >> n4;
	cout << "Введите массив: " << endl;
	for (i = 0; i < n4; i++) {
		cin >> q[i];
	}
	for (i = 0; i < n4; i++) {
		if (q[i] == q[i + 1]) {
		cout << "Номера двух одинаковых элементов: " << i << " и " << i + 1 << "." << endl;
		}
	}
	
}

